        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5">
          {problemasComunes.map((problema) => (
            <div class="rounded-xl hover:scale-105 hover:-translate-y-1 transition-all duration-300 flex items-center" style="padding: clamp(1rem, 2.5vw, 1.25rem); gap: 0.875rem; background: rgba(255, 255, 255, 0.12); backdrop-filter: blur(15px); border: 1.5px solid rgba(255, 255, 255, 0.25); box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);">
              <Icons name="checkCircle" class="text-green-400 shrink-0" style="width: clamp(20px, 5vw, 24px); height: clamp(20px, 5vw, 24px);" />
