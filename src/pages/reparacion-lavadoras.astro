        <!-- Stats rápidos -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
          <div class="text-center rounded-2xl hover:-translate-y-2 hover:scale-105 transition-all duration-300" style="padding: clamp(1rem, 2.5vw, 1.5rem); background: rgba(255, 255, 255, 0.12); backdrop-filter: blur(15px); border: 1.5px solid rgba(255, 255, 255, 0.25); box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);">
            <p class="text-white font-black mb-1" style="font-size: clamp(1.5rem, 4vw, 2rem);">500+</p>
