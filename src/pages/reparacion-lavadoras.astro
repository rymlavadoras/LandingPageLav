---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import Icons from '../components/Icons.astro';

const title = "Reparación de Lavadoras en Chiclayo | Servicio Técnico Especializado | R&M Lavadoras";
const description = "Reparación profesional de lavadoras en Chiclayo, Tuman, Pimentel, José Leonardo Ortiz y toda Lambayeque. Técnicos certificados, repuestos originales, garantía de 1 año. Atendemos Samsung, LG, Whirlpool, Mabe, Electrolux. ☎️ +51 955 112 484";

// FAQ Schema para mejor SEO
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "¿Cuánto cuesta la reparación de una lavadora en Chiclayo?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "El costo de reparación varía según el problema. El diagnóstico inicial es gratuito y luego se cotiza según los repuestos necesarios. Contáctanos al +51 955 112 484 para una cotización personalizada."
      }
    },
    {
      "@type": "Question",
      "name": "¿Qué marcas de lavadoras reparan?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Reparamos todas las marcas: Samsung, LG, Whirlpool, Mabe, Electrolux, Bosch, entre otras. Contamos con repuestos originales y garantía en todos nuestros trabajos."
      }
    },
    {
      "@type": "Question",
      "name": "¿Dan garantía en la reparación?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Sí, ofrecemos 1 año de garantía en todos nuestros trabajos de reparación y repuestos instalados."
      }
    },
    {
      "@type": "Question",
      "name": "¿Atienden a domicilio en Chiclayo?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Sí, atendemos a domicilio en todo Chiclayo, Tuman, Pimentel, La Victoria, Lambayeque y toda la región sin costo adicional."
      }
    }
  ]
};

const problemasComunes = [
  'Lavadora no enciende',
  'No centrifuga',
  'No desagua',
  'Hace ruidos extraños',
  'Pierde agua',
  'No lava bien',
  'Problemas eléctricos',
  'Tarjeta electrónica dañada'
];

const marcasReparamos = [
  { nombre: 'Samsung', descripcion: 'Especialistas en lavadoras Samsung' },
  { nombre: 'LG', descripcion: 'Reparación de lavadoras LG' },
  { nombre: 'Whirlpool', descripcion: 'Servicio técnico Whirlpool' },
  { nombre: 'Mabe', descripcion: 'Reparación de lavadoras Mabe' },
  { nombre: 'Electrolux', descripcion: 'Técnicos certificados Electrolux' },
  { nombre: 'Bosch', descripcion: 'Servicio especializado Bosch' }
];

const zonasAtencion = [
  'Chiclayo',
  'Tuman',
  'Pimentel',
  'Patapo',
  'La Victoria',
  'Lambayeque',
  'Ferreñafe',
  'Monsefú',
  'Eten',
  'y más...'
];
---

<MainLayout title={title} description={description} canonical="https://rymlavadoras.vercel.app/reparacion-lavadoras">
  <!-- FAQ Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  
  <Header />
  
  <main>
    <!-- Hero SEO -->
    <section class="min-h-[70vh] flex items-center justify-center relative overflow-hidden" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%); padding: clamp(7rem, 12vw, 9rem) 1rem clamp(3rem, 6vw, 5rem) 1rem;">
      <!-- Efectos de fondo -->
      <div class="absolute inset-0 z-1">
        <div class="absolute top-0 left-0 w-full h-full" style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.3) 0%, rgba(118, 75, 162, 0.3) 50%, rgba(240, 147, 251, 0.3) 100%); animation: pulse 3s ease-in-out infinite;"></div>
