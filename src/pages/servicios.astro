---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Services from '../components/Services.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import Icons from '../components/Icons.astro';

const title = "Servicios de Reparación de Lavadoras en Chiclayo | R&M Lavadoras";
const description = "Servicios profesionales de reparación, mantenimiento y cambio de repuestos de lavadoras en Chiclayo y Lambayeque. Todas las marcas: Samsung, LG, Whirlpool, Mabe, Electrolux. Garantía incluida. ☎️ +51 955 112 484";
---

<MainLayout title={title} description={description} canonical="https://rymlavadoras.vercel.app/servicios">
  <Header />
  
  <main>
    <!-- Hero de Servicios -->
    <section class="min-h-[60vh] flex items-center justify-center relative overflow-hidden" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%); padding: clamp(7rem, 12vw, 9rem) 1rem clamp(3rem, 6vw, 5rem) 1rem;">
      <!-- Efectos de fondo -->
      <div class="absolute inset-0 z-1">
        <div class="absolute top-0 left-0 w-full h-full" style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.3) 0%, rgba(118, 75, 162, 0.3) 50%, rgba(240, 147, 251, 0.3) 100%); animation: pulse 3s ease-in-out infinite;"></div>
        <div class="absolute top-[20%] left-[20%] rounded-full" style="width: clamp(80px, 15vw, 128px); height: clamp(80px, 15vw, 128px); background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%); filter: blur(60px); opacity: 0.3; animation: float 3s ease-in-out infinite;"></div>
        <div class="absolute bottom-[20%] right-[20%] rounded-full" style="width: clamp(100px, 20vw, 160px); height: clamp(100px, 20vw, 160px); background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%); filter: blur(60px); opacity: 0.3; animation: float 3s ease-in-out infinite; animation-delay: 2s;"></div>
      </div>
      
      <div class="relative z-10 text-center max-w-4xl mx-auto">
        <div class="inline-flex items-center rounded-full mb-6 border border-white/20" style="gap: 0.75rem; background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); padding: 1rem; font-size: 1.2rem;">
          <Icons name="wrench" class="text-[#fbbf24]" style="width: 30px; height: 30px;" />
          <span class="text-white font-semibold">Servicios Profesionales</span>
        </div>
        
        <h1 class="text-white mb-6 px-4" style="font-size: clamp(2rem, 6vw, 4rem); font-weight: 900; line-height: 1.2;">
          Reparación y Mantenimiento de{' '}
          <span class="bg-clip-text text-transparent" style="background: linear-gradient(135deg, #fbbf24 0%, #f97316 50%, #ef4444 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            Lavadoras
          </span>
        </h1>
        
        <p class="text-white/90 mb-8 max-w-[500px] mx-auto px-4" style="font-size: clamp(1rem, 3vw, 1.25rem); line-height: 1.6; margin: 0 auto 2rem;">
          Servicios especializados en Chiclayo y toda la región Lambayeque. Atendemos todas las marcas con garantía.
        </p>

        <div class="flex flex-col px-4" style="gap: clamp(1rem, 2.5vw, 1.5rem); justify-content: center; align-items: center; margin-bottom: 2rem;">
          <a
            href="https://wa.me/51955112484?text=Hola,%20quiero%20información%20sobre%20sus%20servicios"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-success inline-flex items-center justify-center text-white font-semibold rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl w-full max-w-[400px] mx-auto hover:scale-105 hover:-translate-y-1"
            style="gap: 0.5rem; font-size: clamp(1rem, 2.5vw, 1.125rem); padding: clamp(1rem, 3vw, 1.25rem) clamp(1.5rem, 4vw, 2.5rem); background: linear-gradient(135deg, #25d366 0%, #128c7e 100%);"
          >
            <Icons name="phone" style="width: clamp(20px, 5vw, 24px); height: clamp(20px, 5vw, 24px);" />
            Consultar por WhatsApp
            <Icons name="arrowRight" style="width: clamp(16px, 4vw, 20px); height: clamp(16px, 4vw, 20px);" />
          </a>
          
          <a
            href="tel:+51955112484"
            class="btn-outline inline-flex items-center justify-center border-2 border-white text-white hover:bg-white hover:text-gray-900 font-semibold rounded-xl transition-all duration-300 w-full max-w-[400px] mx-auto hover:scale-105 hover:-translate-y-1"
            style="gap: 0.5rem; font-size: clamp(1rem, 2.5vw, 1.125rem); padding: clamp(1rem, 3vw, 1.25rem) clamp(1.5rem, 4vw, 2.5rem); background: transparent;"
          >
            <Icons name="phone" style="width: clamp(20px, 5vw, 24px); height: clamp(20px, 5vw, 24px);" />
            Llamar Ahora
          </a>
        </div>
      </div>
    </section>

    <Services />
    
    <!-- Marcas que reparamos -->
    <section class="relative overflow-hidden" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%); padding: clamp(3rem, 6vw, 6rem) 1rem;">
      <!-- Efectos de fondo -->
      <div class="absolute inset-0 z-1">
        <div class="absolute inset-0 animate-pulse-slow" style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 50%, rgba(240, 147, 251, 0.2) 100%);"></div>
        <div class="absolute top-[10%] left-[10%] rounded-full opacity-20 animate-float" style="width: 200px; height: 200px; background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%); filter: blur(80px);"></div>
      </div>
      
      <div class="relative z-10 max-w-[1200px] mx-auto px-4">
        <!-- Header -->
        <div class="text-center mb-16">
          <div class="inline-flex items-center rounded-full mb-6 border border-white/20" style="gap: 0.75rem; background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); padding: 1rem; font-size: 1.2rem;">
            <Icons name="star" class="text-[#fbbf24]" style="width: 30px; height: 30px;" />
            <span class="text-white font-semibold">Todas las Marcas</span>
          </div>
          
          <h2 class="text-white mb-6 font-black leading-tight" style="font-size: clamp(2.5rem, 5vw, 3.5rem);">
            Reparamos Todas las Marcas
          </h2>
          
          <p class="text-white/80 max-full mx-auto px-6 min-h-24 md:h-20 lg:h-24 leading-relaxed" style="font-size: clamp(1rem, 2.5vw, 1.25rem);">
            Trabajamos con repuestos originales para todas las marcas del mercado
          </p>
        </div>
        
        <!-- Grid de Marcas -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
          {['Samsung', 'LG', 'Whirlpool', 'Mabe', 'Electrolux', 'Bosch'].map((brand) => (
            <div class="text-center rounded-2xl hover:-translate-y-2 hover:scale-105 transition-all duration-300" style="padding: clamp(1.5rem, 3.5vw, 2rem); background: rgba(255, 255, 255, 0.12); backdrop-filter: blur(15px); border: 1.5px solid rgba(255, 255, 255, 0.25); box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);">
              <div class="rounded-xl flex items-center justify-center mb-3 shadow-lg" style="width: clamp(48px, 12vw, 64px); height: clamp(48px, 12vw, 64px); margin: 0 auto; background: linear-gradient(135deg, #667eea 0%, #f093fb 100%);">
                <Icons name="checkCircle" class="text-white" style="width: clamp(24px, 6vw, 32px); height: clamp(24px, 6vw, 32px);" />
              </div>
              <p class="text-white font-bold" style="font-size: clamp(0.875rem, 2.5vw, 1.125rem);">{brand}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <Contact />
  </main>
  
  <Footer />
  <WhatsAppButton />
</MainLayout>


