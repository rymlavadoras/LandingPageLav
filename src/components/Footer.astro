---
import Icons from './Icons.astro';

const currentYear = new Date().getFullYear();

const footerLinks = {
  servicios: [
    'Reparación General',
    'Mantenimiento Preventivo',
    'Cambio de Repuestos',
    'Diagnóstico Electrónico',
    'Instalación Nueva'
  ],
  marcas: [
    'Samsung',
    'LG',
    'Whirlpool',
    'Mabe',
    'Electrolux',
    'Bosch'
  ],
  contacto: [
    { icon: 'phone', text: '+51 955 112 484', link: 'tel:+51955112484' },
    { icon: 'messageCircle', text: 'WhatsApp 24/7', link: 'https://wa.me/51955112484' },
    { icon: 'mail', text: 'rymlavadoras@gmail.com', link: 'mailto:rymlavadoras@gmail.com' },
    { icon: 'mapPin', text: 'Chiclayo, Tuman', link: '#' }
  ]
};

const socialLinks = [
  { icon: 'facebook', href: '#', label: 'Facebook' },
  { icon: 'instagram', href: '#', label: 'Instagram' },
  { icon: 'twitter', href: '#', label: 'Twitter' },
  { icon: 'youtube', href: '#', label: 'YouTube' }
];
---

<footer class="relative overflow-hidden" style="background: linear-gradient(135deg, #1a202c 0%, #2d3748 50%, #4a5568 100%); padding: clamp(3rem, 6vw, 6rem) 1rem;">
  <!-- Efectos de fondo -->
  <div class="absolute inset-0 z-1">
    <div class="absolute inset-0 animate-pulse-slow" style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 50%, rgba(240, 147, 251, 0.1) 100%);"></div>
    <div class="absolute top-[20%] right-[10%] rounded-full opacity-20 animate-float" style="width: clamp(100px, 20vw, 150px); height: clamp(100px, 20vw, 150px); background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%); filter: blur(60px);"></div>
    <div class="absolute bottom-[30%] left-[10%] rounded-full opacity-25 animate-float" style="width: clamp(80px, 15vw, 120px); height: clamp(80px, 15vw, 120px); background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%); filter: blur(50px); animation-delay: 4s;"></div>
  </div>

  <div class="relative z-10 max-w-[1200px] mx-auto">
    <!-- Header del footer -->
    <div class="text-center mb-12 pb-8 border-b border-white/10">
      <div class="flex items-center justify-center gap-3 mb-4">
        <div class="w-14 h-14 rounded-2xl flex items-center justify-center shadow-lg" style="background: linear-gradient(135deg, #667eea 0%, #f093fb 100%);">
          <Icons name="wrench" class="w-7 h-7 text-white" />
        </div>
        <h3 class="text-white" style="font-size: clamp(1.75rem, 4vw, 2.5rem); font-weight: 900;">RyM Lavadoras</h3>
      </div>
      <p class="text-white/70 max-full mx-auto min-h-24 md:h-20 lg:h-24">
        Más de 4 años brindando servicios de reparación y mantenimiento de lavadoras en Chiclayo y Lambayeque
      </p>
    </div>

    <!-- Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 mb-12" style="gap: clamp(2rem, 4vw, 3rem);">
      <!-- Servicios -->
      <div>
        <h4 class="text-white font-bold mb-6" style="font-size: clamp(1.125rem, 2.5vw, 1.25rem);">Servicios</h4>
        <ul class="space-y-3">
          {footerLinks.servicios.map((servicio) => (
            <li>
              <a href="#servicios" class="text-white/70 hover:text-white hover:translate-x-1 inline-block transition-all duration-300 text-sm">
                {servicio}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Marcas -->
      <div>
        <h4 class="text-white font-bold mb-6" style="font-size: clamp(1.125rem, 2.5vw, 1.25rem);">Marcas</h4>
        <div class="grid grid-cols-2 gap-3">
          {footerLinks.marcas.map((marca) => (
            <div class="glass-effect px-3 py-2 rounded-lg text-center text-white/80 text-sm hover:bg-white/20 transition-all">
              {marca}
            </div>
          ))}
        </div>
      </div>

      <!-- Contacto -->
      <div>
        <h4 class="text-white font-bold mb-6" style="font-size: clamp(1.125rem, 2.5vw, 1.25rem);">Contacto</h4>
        <ul class="space-y-3">
          {footerLinks.contacto.map((item) => (
            <li>
              <a 
                href={item.link}
                target={item.link.startsWith('http') ? '_blank' : undefined}
                rel={item.link.startsWith('http') ? 'noopener noreferrer' : undefined}
                class="flex items-center gap-2 text-white/70 hover:text-white transition-colors text-sm"
              >
                <Icons name={item.icon} class="w-4 h-4 shrink-0" />
                <span>{item.text}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Horario y Redes -->
      <div>
        <h4 class="text-white font-bold mb-6" style="font-size: clamp(1.125rem, 2.5vw, 1.25rem);">Horario</h4>
        <div class="glass-effect p-4 rounded-xl mb-6">
          <div class="flex items-start gap-2 text-white/80 text-sm">
            <Icons name="clock" class="w-5 h-5 shrink-0 mt-0.5" />
            <div>
              <p class="font-semibold text-white mb-1">Lunes a Sábado</p>
              <p>8:00 AM - 6:00 PM</p>
            </div>
          </div>
        </div>

        <h4 class="text-white font-bold mb-4" style="font-size: clamp(1.125rem, 2.5vw, 1.25rem);">Síguenos</h4>
        <div class="flex gap-3">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              aria-label={social.label}
              class="glass-effect border border-white/20 rounded-full flex items-center justify-center text-white hover:bg-white/20 hover:scale-110 transition-all duration-300" style="width: clamp(40px, 10vw, 48px); height: clamp(40px, 10vw, 48px);"
            >
              <Icons name={social.icon} class="w-5 h-5" />
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="pt-8 border-t border-white/10 text-center">
      <p class="text-white/60" style="font-size: clamp(0.875rem, 2vw, 1rem);">
        © {currentYear} <span class="font-semibold text-white">RyM Lavadoras</span>. Todos los derechos reservados. Chiclayo, Lambayeque - Perú
      </p>
      <p class="text-white/40 text-xs mt-2">
        Hecho con <Icons name="heart" class="w-4 h-4 inline text-red-500" style="fill: #ef4444;" /> en Chiclayo
      </p>
    </div>
  </div>
</footer>
